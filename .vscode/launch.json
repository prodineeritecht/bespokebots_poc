    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: GCal Client",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": ["-s", "tests/services/google_calendar"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Agent Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": ["-s", "tests/services/agent"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: GCal Tools",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": ["-s", "tests/services/agent/google_calendar_tools"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
}